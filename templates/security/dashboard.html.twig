{% extends '@!EasyAdmin/page/content.html.twig' %}

{% block page_title %} Admin {% endblock %}

{% block header_logo %}
    <a class="logo {{ ea.dashboardTitle|length > 14 ? 'logo-long' }}" title="{{ ea.dashboardTitle|striptags }}" href="{{ path('app_index',{vueRouting:''}) }}">
        {{ ea.dashboardTitle|raw }}
    </a>
{% endblock header_logo %}

{% block page_content %}
    <div class="row">
        {% for menuItem in ea.mainMenu.items %}
            {% if loop.index > 1 %}
                <div class="d-grid gap-2 col-md-6 mx-auto mt-2">
                    <a class="btn btn-lg btn-primary" href="{{ relative_path(menuItem.linkUrl) }}" role="button">{{menuItem.label}}</a>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
